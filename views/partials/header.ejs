<header class="header">
    <div id="logo">
        <a href="/home" title="Go to Home Page">
            <img src="/img/logo.png" alt="Forum Logo">
            <h1>ASPRINT</h1>
        </a>
    </div>
    
    <form action="/search" method="GET" id="search-form" role="search">
        <input type="text" 
               id="search" 
               name="searchTerm" 
               placeholder="Search posts (e.g., 'star wars c/movies')"
               aria-label="Search the forum">
    </form>

    <nav id="header-buttons" aria-label="User navigation">
        <a href="/createpost" class="header-button" title="Create Post">
            <img src="/img/add-icon.svg" alt="Post icon">
        </a>
        
        <% if (typeof user !== 'undefined' && user) { %>
            <a href="/myprofile" class="header-button">u/<%= user.username %></a>
            <a href="/logout" class="header-button">Logout</a>
        <% } else { %>
            <a href="/login" class="header-button">Login</a>
        <% } %>
    </nav>
</header>

<aside class="sidebar" aria-label="Main navigation">
    <nav>
        <a href="/" class="sidebar-buttons">
            <img src="/img/home-icon.svg" alt="">
            <span>Home</span>
        </a>
        <a href="/popular" class="sidebar-buttons">
            <img src="/img/trend-up-icon.svg" alt="Popular icon">
            <span>Popular</span>
        </a>
        <a href="/communities" class="sidebar-buttons">
            <img src="/img/group-icon.svg" alt="Communities icon">
            <span>Communities</span>
        </a>
        <a href="/about" class="sidebar-buttons">
            <img src="/img/about-icon.svg" alt="Forum Logo">
            <span>About</span>
        </a>
    </nav>
</aside>